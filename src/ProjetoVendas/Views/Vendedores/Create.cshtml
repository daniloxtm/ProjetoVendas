@model ProjetoVendas.Models.Vendedor

@{
    ViewData["Title"] = "Criar Novo";
}

<h2>@ViewData["Title"]</h2>

<h4> Vendedor </h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateNascimento" class="control-label"></label>
                <input asp-for="DateNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalario" class="control-label"></label>
                <input asp-for="BaseSalario" class="form-control" />
            </div>
            <div class="form-group">
              <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

